@{
    ViewData["Title"] = "Home - ISMT College";
}

<!-- Hero Section -->
<div class="hero-section text-white text-center py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h1 class="display-3 fw-bold mb-4 fade-in">Welcome to ISMT College</h1>
                <p class="lead mb-4 slide-up">Empowering students with quality education and innovative learning experiences for over 25 years</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="/Courses" class="btn btn-light btn-lg px-4">Explore Programs</a>
                    <a href="/Contact" class="btn btn-outline-light btn-lg px-4">Get in Touch</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mt-5">
    <div class="row mb-5">
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-graduation-cap fa-3x text-primary mb-3"></i>
                    <h4>Academic Excellence</h4>
                    <p class="text-muted">Our programs are designed to meet industry standards and prepare you for successful careers.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h4>Expert Faculty</h4>
                    <p class="text-muted">Learn from industry professionals who bring real-world experience to the classroom.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm text-center">
                <div class="card-body">
                    <i class="fas fa-hands-helping fa-3x text-primary mb-3"></i>
                    <h4>Hands-on Learning</h4>
                    <p class="text-muted">Practical projects and internships provide real-world experience and industry connections.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Programs Preview -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="text-primary mb-4">Popular Programs</h2>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-laptop-code fa-2x text-primary mb-3"></i>
                    <h5>Computer Science</h5>
                    <p class="text-muted small">Programming, algorithms, and software development</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-cogs fa-2x text-primary mb-3"></i>
                    <h5>Mechanical Engineering</h5>
                    <p class="text-muted small">Mechanical systems and manufacturing</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-bolt fa-2x text-primary mb-3"></i>
                    <h5>Electrical Engineering</h5>
                    <p class="text-muted small">Electrical circuits and power systems</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-2x text-primary mb-3"></i>
                    <h5>Business Administration</h5>
                    <p class="text-muted small">Management and business strategy</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <h2 class="text-primary">25+</h2>
                            <p class="text-muted">Years of Excellence</p>
                        </div>
                        <div class="col-md-3 mb-3">
                            <h2 class="text-primary">5000+</h2>
                            <p class="text-muted">Students Enrolled</p>
                        </div>
                        <div class="col-md-3 mb-3">
                            <h2 class="text-primary">95%</h2>
                            <p class="text-muted">Graduate Employment Rate</p>
                        </div>
                        <div class="col-md-3 mb-3">
                            <h2 class="text-primary">50+</h2>
                            <p class="text-muted">Industry Partners</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action -->
    <div class="row">
        <div class="col-lg-8 mx-auto text-center">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body py-5">
                    <h3 class="mb-3">Ready to Start Your Journey?</h3>
                    <p class="mb-4">Join thousands of successful graduates who have transformed their careers with ISMT College.</p>
                    <a href="/Contact" class="btn btn-light btn-lg px-4">Apply Now</a>
                </div>
            </div>
        </div>
    </div>
</div>


